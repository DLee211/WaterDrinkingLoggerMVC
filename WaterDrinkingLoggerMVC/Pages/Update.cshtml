@page
@model UpdateModel
@{
    ViewData["Title"] = "Update Water Drinking Log";
}

<h2>Update Water Drinking Log</h2>

<form method="post">
    <input type="hidden" asp-for="WaterDrinking.Id" />
    <div class="form-group">
        <label asp-for="WaterDrinking.Amount"></label>
        <input asp-for="WaterDrinking.Amount" class="form-control" />
        <span asp-validation-for="WaterDrinking.Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WaterDrinking.Time"></label>
        <input asp-for="WaterDrinking.Time" class="form-control" />
        <span asp-validation-for="WaterDrinking.Time" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WaterDrinking.User"></label>
        <input asp-for="WaterDrinking.User" class="form-control" />
        <span asp-validation-for="WaterDrinking.User" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>